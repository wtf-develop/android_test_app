<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="14dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@id/list_image"
        android:layout_alignTop="@id/list_image"
        android:layout_alignRight="@id/list_image"
        android:layout_alignBottom="@id/list_image"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/img_foreground_black"
        app:srcCompat="@drawable/img_foreground_black" />
    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:singleLine="true"
        android:lines="1"
        android:paddingTop="0dp"
        android:paddingBottom="4dp"
        android:background="@color/base_secondary1"
        android:textColor="@color/light_text_color"
        android:layout_below="@id/list_image"
        android:textSize="18sp" />


</RelativeLayout>